<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubwayActivity"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/eunjipurple"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/menu1"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:backgroundTint="@android:color/white"
            android:drawableTop="@drawable/img_search"
            android:paddingLeft="50dp"

            >

        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/menu2"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:backgroundTint="@android:color/white"
            android:drawableTop="@drawable/img_time"></androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/menu3"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:backgroundTint="@android:color/white"
            android:drawableTop="@drawable/img_map">

        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/menu4"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:backgroundTint="@android:color/white"
            android:drawableTop="@drawable/img_setting"
            android:paddingRight="50dp">

        </androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:background="@color/eunjipurple"
        >

        <TextView
            android:id="@+id/txtSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"
            android:text="검색"
            android:paddingLeft="40dp"/>

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"
            android:text="최근검색"
            android:paddingRight="5dp"/>

        <TextView
            android:id="@+id/txtX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"
            android:text="미정"
            android:paddingRight="10dp"/>

        <TextView
            android:id="@+id/txtSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"
            android:text="설정"
            android:paddingRight="50dp"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_subway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_subway"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </ImageView>

        <android.widget.Button
            android:id="@+id/youngsan"
            android:layout_width="4.5dp"
            android:layout_height="4.5dp"
            android:background="@drawable/big_rounded_button"
            tools:layout_editor_absoluteX="175.8dp"
            tools:layout_editor_absoluteY="330dp" />

        <android.widget.Button
            android:id="@+id/seobinggo"
            android:layout_width="2.5dp"
            android:layout_height="2.5dp"
            android:layout_marginStart="214dp"
            android:layout_marginBottom="194dp"
            android:background="@drawable/small_rounded_button"
            app:layout_constraintBottom_toTopOf="@+id/img_subway"
            app:layout_constraintEnd_toStartOf="@+id/img_subway"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/middlelline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="121dp">



            <TextView
                android:id="@+id/testtx"
                android:layout_width="42dp"
                android:layout_height="51dp"
                android:text="no"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="31dp" />




        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>